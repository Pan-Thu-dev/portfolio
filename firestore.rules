rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Projects collection: Allow public reads, restrict writes to Admin SDK
    match /projects/{projectId} {
      allow read: if true; // Anyone can read project data
      allow write: if request.auth != null; // Only authenticated users can write
    }

    // Contacts collection: Allow public creates, restrict reads/updates to Admin SDK
    match /contacts/{contactId} {
      allow read: if false;
      allow create: if true; // Allow anyone to create (submit form)
      allow update, delete: if request.auth != null; // Only authenticated users can modify/delete
    }

    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
} 